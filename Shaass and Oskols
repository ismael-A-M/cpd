n = int(input())
a = list(map(int, input().split()))
m = int(input())
arr = []

for i in range(m):
    x, y = map(int, input().split())
    arr.append([x, y])

for k in range(m):
    x = arr[k][0] - 1
    y = arr[k][1]

    l = y - 1
    r = a[x] - y

    if n == 1:
        a[x] = 0
    elif x == 0:
        a[x+1] += r
        a[x] = 0
    elif x == n-1:
        a[x-1] += l
        a[x] = 0
    else:
        a[x-1] += l
        a[x+1] += r
        a[x] = 0

for z in range(n):
    print(a[z])
