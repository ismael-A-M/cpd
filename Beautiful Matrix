mtx = []
inx = []
for i in range(1, 6):
    arr = list(map(int, input().split()))
    mtx.append(arr)
    for x in range(1, 6):
        if arr[x-1] == 1:
            inx = [i, x]
if inx == [3,3]:
    print(0)

elif inx in ([3,2], [2,3], [3,4], [4,3]):
    print(1)

elif inx in ([3,1], [1,3], [3,5], [5,3], [2,2], [2,4], [4,2], [4,4]):
    print(2)

elif inx in ([1,2], [2,1], [4,1], [5,2], [1,4], [2,5], [4,5], [5,4]):
    print(3)

else:
    print(4)
